<script>
const canvas = document.getElementById('gameCanvas');
const ctx = canvas.getContext('2d');

canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

window.addEventListener('resize', () => {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
});

let gameStarted = false;
let gameTime = 300;
let blueScore = 0;
let redScore = 0;
let lastTime = Date.now();

const player = {
    x: 30, y: 100, z: 0,
    vx: 0, vy: 0,
    angle: 0, pitch: 0,
    team: 'blue',
    health: 100, maxHealth: 100,
    ammo: 5, maxAmmo: 5,
    bowCharge: 0,
    isCharging: false,
    isDead: false,
    respawnTime: 0,
    speed: 0.2
};

const keys = {};
const bots = [];
const arrows = [];
const BOT_COUNT = 9;

class Bot {
    constructor(team, id) {
        this.id = id;
        this.team = team;
        this.spawn();
        this.angle = Math.random() * Math.PI * 2;
        this.pitch = 0;
        this.vx = 0;
        this.vy = 0;
        this.ammo = 5;
        this.maxAmmo = 5;
        this.health = 100;
        this.maxHealth = 100;
        this.isDead = false;
        this.respawnTime = 0;
        this.target = null;
        this.thinkTimer = 0;
        this.shootCooldown = 0;
    }
    
    spawn() {
        if (this.team === 'blue') {
            this.x = 20 + Math.random() * 30;
            this.y = 80 + Math.random() * 40;
        } else {
            this.x = 150 + Math.random() * 30;
            this.y = 80 + Math.random() * 40;
        }
        this.z = 0;
        this.health = this.maxHealth;
        this.isDead = false;
        this.ammo = this.maxAmmo;
    }
    
    update(dt) {
        if (this.isDead) {
            this.respawnTime -= dt;
            if (this.respawnTime <= 0) this.spawn();
            return;
        }
        
        this.thinkTimer -= dt;
        this.shootCooldown -= dt;
        
        if (this.thinkTimer <= 0) {
            this.thinkTimer = 0.3 + Math.random() * 0.5;
            
            let nearestEnemy = null;
            let nearestDist = Infinity;
            
            if (!player.isDead && player.team !== this.team) {
                const dist = Math.hypot(player.x - this.x, player.y - this.y);
                if (dist < nearestDist) {
                    nearestDist = dist;
                    nearestEnemy = player;
                }
            }
            
            for (const bot of bots) {
                if (bot !== this && !bot.isDead && bot.team !== this.team) {
                    const dist = Math.hypot(bot.x - this.x, bot.y - this.y);
                    if (dist < nearestDist) {
                        nearestDist = dist;
                        nearestEnemy = bot;
                    }
                }
            }
            
            this.target = nearestEnemy;
        }
        
        const speed = 0.15;
        
        if (this.target) {
            const dx = this.target.x - this.x;
            const dy = this.target.y - this.y;
            const dist = Math.hypot(dx, dy);
            
            if (dist > 50) {
                this.vx = (dx / dist) * speed;
                this.vy = (dy / dist) * speed;
            } else if (dist < 25) {
                this.vx = -(dx / dist) * speed;
                this.vy = -(dy / dist) * speed;
            } else {
                this.vx *= 0.9;
                this.vy *= 0.9;
            }
            
            this.angle = Math.atan2(dy, dx);
            this.pitch = -Math.atan2(5, dist);
            
            if (dist < 70 && this.ammo > 0 && this.shootCooldown <= 0 && Math.random() < 0.08) {
                this.shootArrow();
                this.shootCooldown = 1 + Math.random();
            }
        } else {
            this.vx *= 0.9;
            this.vy *= 0.9;
        }
        
        this.x += this.vx;
        this.y += this.vy;
        this.x = Math.max(5, Math.min(195, this.x));
        this.y = Math.max(5, Math.min(195, this.y));
        
        if (this.ammo === 0 && Math.random() < 0.01) {
            this.ammo = this.maxAmmo;
        }
    }
    
    shootArrow() {
        if (this.ammo <= 0) return;
        this.ammo--;
        
        const speed = 2.5;
        arrows.push(new Arrow(
            this.x, this.y, 5,
            Math.cos(this.angle) * speed,
            Math.sin(this.angle) * speed,
            Math.sin(this.pitch) * speed,
            this.team, this
        ));
    }
    
    takeDamage(damage, attacker) {
        this.health -= damage;
        if (this.health <= 0) this.die(attacker);
    }
    
    die(killer) {
        this.isDead = true;
        this.respawnTime = 5;
        
        if (killer && killer.team !== this.team) {
            if (killer.team === 'blue') blueScore++;
            else redScore++;
            updateScore();
        }
    }
}

class Arrow {
    constructor(x, y, z, vx, vy, vz, team, shooter) {
        this.x = x;
        this.y = y;
        this.z = z;
        this.vx = vx;
        this.vy = vy;
        this.vz = vz;
        this.team = team;
        this.shooter = shooter;
        this.life = 3;
    }
    
    update(dt) {
        this.x += this.vx;
        this.y += this.vy;
        this.z += this.vz;
        this.vz -= 0.15;
        this.life -= dt;
        
        if (this.z <= 0) return true;
        
        if (!player.isDead && this.shooter !== player && player.team !== this.team) {
            if (Math.hypot(player.x - this.x, player.y - this.y) < 2 && this.z < 10) {
                player.takeDamage(50, this.shooter);
                return true;
            }
        }
        
        for (const bot of bots) {
            if (!bot.isDead && this.shooter !== bot && bot.team !== this.team) {
                if (Math.hypot(bot.x - this.x, bot.y - this.y) < 2 && this.z < 10) {
                    bot.takeDamage(50, this.shooter);
                    return true;
                }
            }
        }
        
        return this.life <= 0;
    }
}

function initBots() {
    bots.length = 0;
    for (let i = 0; i < BOT_COUNT; i++) {
        const team = i < BOT_COUNT / 2 ? 'blue' : 'red';
        bots.push(new Bot(team, i + 1));
    }
}

function shootArrow() {
    if (player.ammo <= 0 || player.isDead) return;
    
    player.ammo--;
    updateAmmo();
    
    const power = Math.min(player.bowCharge, 1);
    const speed = 1.8 + power * 1.2;
    
    arrows.push(new Arrow(
        player.x, player.y, 5,
        Math.cos(player.angle) * speed,
        Math.sin(player.angle) * speed,
        Math.sin(player.pitch) * speed,
        player.team, player
    ));
}

player.takeDamage = function(damage, attacker) {
    this.health -= damage;
    updateHealth();
    if (this.health <= 0) this.die(attacker);
};

player.die = function(killer) {
    this.isDead = true;
    this.respawnTime = 5;
    
    if (killer && killer.team !== player.team) {
        if (killer.team === 'red') redScore++;
        updateScore();
    }
    
    showRespawnScreen();
};

player.spawn = function() {
    this.x = 30;
    this.y = 100;
    this.z = 0;
    this.health = this.maxHealth;
    this.isDead = false;
    this.ammo = this.maxAmmo;
    updateAmmo();
    updateHealth();
};

function reload() {
    if (player.ammo < player.maxAmmo && !player.isDead) {
        player.ammo = player.maxAmmo;
        updateAmmo();
    }
}

function updateScore() {
    document.getElementById('blueScore').textContent = blueScore;
    document.getElementById('redScore').textContent = redScore;
}

function updateAmmo() {
    document.getElementById('currentAmmo').textContent = player.ammo;
}

function updateHealth() {
    const percent = (player.health / player.maxHealth) * 100;
    document.getElementById('healthBarFill').style.width = percent + '%';
}

function updateTimer() {
    const minutes = Math.floor(gameTime / 60);
    const seconds = Math.floor(gameTime % 60);
    document.getElementById('timer').textContent = 
        `${minutes}:${seconds.toString().padStart(2, '0')}`;
}

function showRespawnScreen() {
    document.getElementById('respawnScreen').style.display = 'flex';
    const timerEl = document.getElementById('respawnTimer');
    
    const interval = setInterval(() => {
        player.respawnTime -= 0.1;
        timerEl.textContent = Math.ceil(player.respawnTime);
        
        if (player.respawnTime <= 0) {
            clearInterval(interval);
            player.spawn();
            document.getElementById('respawnScreen').style.display = 'none';
        }
    }, 100);
}

function startGame() {
    document.getElementById('startScreen').style.display = 'none';
    gameStarted = true;
    initBots();
    player.spawn();
    updateScore();
    updateAmmo();
    updateHealth();
    canvas.requestPointerLock();
    lastTime = Date.now();
    gameLoop();
}

function endGame() {
    gameStarted = false;
    document.exitPointerLock();
    
    const gameOverEl = document.getElementById('gameOver');
    const winnerTextEl = document.getElementById('winnerText');
    const finalScoreEl = document.getElementById('finalScore');
    
    if (blueScore > redScore) {
        winnerTextEl.textContent = 'üîµ Èùí„ÉÅ„Éº„É†„ÅÆÂãùÂà©ÔºÅ';
        winnerTextEl.className = 'winner-blue';
    } else if (redScore > blueScore) {
        winnerTextEl.textContent = 'üî¥ Ëµ§„ÉÅ„Éº„É†„ÅÆÂãùÂà©ÔºÅ';
        winnerTextEl.className = 'winner-red';
    } else {
        winnerTextEl.textContent = 'Âºï„ÅçÂàÜ„ÅëÔºÅ';
        winnerTextEl.className = '';
    }
    
    finalScoreEl.textContent = `ÊúÄÁµÇ„Çπ„Ç≥„Ç¢: ${blueScore} - ${redScore}`;
    gameOverEl.style.display = 'flex';
}

document.addEventListener('keydown', (e) => {
    keys[e.key.toLowerCase()] = true;
    if (e.key.toLowerCase() === 'r') reload();
});

document.addEventListener('keyup', (e) => {
    keys[e.key.toLowerCase()] = false;
});

canvas.addEventListener('mousedown', (e) => {
    if (e.button === 0 && !player.isCharging && player.ammo > 0 && !player.isDead) {
        player.isCharging = true;
        player.bowCharge = 0;
    }
});

canvas.addEventListener('mouseup', (e) => {
    if (e.button === 0 && player.isCharging) {
        shootArrow();
        player.isCharging = false;
        player.bowCharge = 0;
    }
});

canvas.addEventListener('mousemove', (e) => {
    if (gameStarted && document.pointerLockElement === canvas) {
        player.angle += e.movementX * 0.002;
        player.pitch = Math.max(-Math.PI / 3, Math.min(Math.PI / 3, player.pitch - e.movementY * 0.002));
    }
});

canvas.addEventListener('click', () => {
    if (gameStarted) canvas.requestPointerLock();
});

function gameLoop() {
    if (!gameStarted) return;
    
    const now = Date.now();
    const dt = Math.min((now - lastTime) / 1000, 0.1);
    lastTime = now;
    
    gameTime -= dt;
    updateTimer();
    
    if (gameTime <= 0) {
        endGame();
        return;
    }
    
    if (!player.isDead) {
        let moveX = 0;
        let moveY = 0;
        
        if (keys['w']) moveY -= 1;
        if (keys['s']) moveY += 1;
        if (keys['a']) moveX -= 1;
        if (keys['d']) moveX += 1;
        
        if (moveX || moveY) {
            const len = Math.sqrt(moveX * moveX + moveY * moveY);
            moveX /= len;
            moveY /= len;
            
            const cos = Math.cos(player.angle);
            const sin = Math.sin(player.angle);
            
            player.vx = (moveX * cos - moveY * sin) * player.speed;
            player.vy = (moveX * sin + moveY * cos) * player.speed;
        } else {
            player.vx *= 0.9;
            player.vy *= 0.9;
        }
        
        player.x += player.vx;
        player.y += player.vy;
        player.x = Math.max(5, Math.min(195, player.x));
        player.y = Math.max(5, Math.min(195, player.y));
        
        if (player.isCharging) {
            player.bowCharge += dt * 1.2;
        }
    }
    
    for (const bot of bots) bot.update(dt);
    
    for (let i = arrows.length - 1; i >= 0; i--) {
        if (arrows[i].update(dt)) arrows.splice(i, 1);
    }
    
    render();
    requestAnimationFrame(gameLoop);
}

function render() {
    const w = canvas.width;
    const h = canvas.height;
    
    const skyGrad = ctx.createLinearGradient(0, 0, 0, h);
    skyGrad.addColorStop(0, '#87CEEB');
    skyGrad.addColorStop(1, '#E0F6FF');
    ctx.fillStyle = skyGrad;
    ctx.fillRect(0, 0, w, h);
    
    const groundGrad = ctx.createLinearGradient(0, h * 0.5, 0, h);
    groundGrad.addColorStop(0, '#6B8E23');
    groundGrad.addColorStop(1, '#556B2F');
    ctx.fillStyle = groundGrad;
    ctx.fillRect(0, h * 0.5, w, h * 0.5);
    
    const entities = [];
    
    if (!player.isDead) {
        entities.push({type: 'player', obj: player});
    }
    
    for (const bot of bots) {
        if (!bot.isDead) {
            entities.push({type: 'bot', obj: bot});
        }
    }
    
    for (const arrow of arrows) {
        entities.push({type: 'arrow', obj: arrow});
    }
    
    entities.sort((a, b) => {
        const aDist = Math.hypot(a.obj.x - player.x, a.obj.y - player.y);
        const bDist = Math.hypot(b.obj.x - player.x, b.obj.y - player.y);
        return bDist - aDist;
    });
    
    for (const entity of entities) {
        const obj = entity.obj;
        const dx = obj.x - player.x;
        const dy = obj.y - player.y;
        
        const rotX = dx * Math.cos(-player.angle) - dy * Math.sin(-player.angle);
        const rotY = dx * Math.sin(-player.angle) + dy * Math.cos(-player.angle);
        
        if (rotY <= 0.1 || entity.obj === player) continue;
        
        const scale = 400 / rotY;
        const screenX = w / 2 + rotX * scale;
        const screenY = h / 2 - obj.z * scale + player.pitch * 300;
        
        if (entity.type === 'arrow') {
            ctx.fillStyle = obj.team === 'blue' ? '#4dabf7' : '#ff6b6b';
            ctx.beginPath();
            ctx.arc(screenX, screenY, Math.max(2, scale * 0.3), 0, Math.PI * 2);
            ctx.fill();
        } else {
            const size = scale * 3;
            
            if (entity.type === 'bot') {
                ctx.fillStyle = obj.team === 'blue' ? '#4dabf7' : '#ff6b6b';
            } else {
                ctx.fillStyle = '#2f9e44';
            }
            
            ctx.fillRect(screenX - size / 2, screenY - size, size, size * 2);
            
            ctx.fillStyle = '#fff';
            ctx.fillRect(screenX - size / 3, screenY - size * 0.8, size / 6, size / 4);
            ctx.fillRect(screenX + size / 6, screenY - size * 0.8, size / 6, size / 4);
            
            const healthBarWidth = size * 1.2;
            const healthPercent = obj.health / obj.maxHealth;
            
            ctx.fillStyle = 'rgba(0, 0, 0, 0.5)';
            ctx.fillRect(screenX - healthBarWidth / 2, screenY - size * 1.3, healthBarWidth, 4);
            
            ctx.fillStyle = healthPercent > 0.5 ? '#51cf66' : healthPercent > 0.25 ? '#ffd43b' : '#ff6b6b';
            ctx.fillRect(screenX - healthBarWidth / 2, screenY - size * 1.3, healthBarWidth * healthPercent, 4);
        }
    }
    
    if (player.isCharging) {
        const chargePercent = Math.min(player.bowCharge, 1);
        const barWidth = 200;
        const barHeight = 10;
        const x = w / 2 - barWidth / 2;
        const y = h - 100;
        
        ctx.fillStyle = 'rgba(0, 0, 0, 0.5)';
        ctx.fillRect(x, y, barWidth, barHeight);
        
        ctx.fillStyle = `hsl(${120 * chargePercent}, 80%, 50%)`;
        ctx.fillRect(x, y, barWidth * chargePercent, barHeight);
    }
}
</script>
</body>
</html>
